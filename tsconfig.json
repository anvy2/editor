{
	"compilerOptions": {
		"allowJs": false,
		"allowUnreachableCode": false,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"lib": ["es6", "es2015", "es2017", "dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"strict": true,
		"pretty": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "esnext",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": "src",
	},

	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"razzle.config.js",
		"temp.js"
	],
	"include": ["src/**/*", "*.ts", "*.tsx"],
	"compileOnSave": false
}
